<div style="background:#e6e6e8; color:#111; padding: 15px; font-size:1em;">
  <p>
  	Hello <%= "#{ @membership.user.name }" %>, <br>
    Here's your digest for <%= "#{ @membership.group.name }" %><br>
  </p>
  <% @posts.each do |post| %>
    <p>
      User: <%= "#{ post.user.name }" %><br>
      <%= "#{ post.likes.count }" %> likes<br>
      <%= "#{ post.comments.count }" %> comments<br><br>
      <%= "#{ post.body }" %><br><br><br>
    </p>
  <% end %>
</div>